<UserControl x:Class="HEC.ToolbarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HEC"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="300">
    <Grid>
        <Label x:Name="label" Content="{Binding Path=Title}" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Foreground="Red"/>

    </Grid>
</UserControl>
