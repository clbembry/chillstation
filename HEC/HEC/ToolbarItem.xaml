<UserControl x:Class="HEC.ToolbarItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HEC"
             mc:Ignorable="d" 
             d:DesignHeight="84" d:DesignWidth="300">
    <Grid Background="Black">
        <Grid HorizontalAlignment="Left" Height="64" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="64" VerticalAlignment="Top" Width="280">
                <Grid Width="64">
                    <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="44" Stroke="Black" VerticalAlignment="Top" Width="44" Margin="10,10,0,0"/>
                    <Label x:Name="label1" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.116,0.434" Width="44" Height="44"/>
                </Grid>
                <Label x:Name="label"  Content="{ Binding Path=Title }" Height="64"/>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
